<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sludinājumu portāls", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Sludinājumi", "Index", "Home")</li>*@
                    @if (Session.IsLogged())
                    {
                        <li><a href="#">Sveiks, @Session.GetUser().Username</a></li>
                        <li>@Html.ActionLink("Mani sludinājumi", "MyPostings", "Category")</li>
                        <li>@Html.ActionLink("Pievienot sludinājumu", "NewPostings", "Postings")</li>
                        <li>@Html.ActionLink("Iziet", "Logout", "User")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Reģistrēties", "Register", "User")</li>
                        <li>@Html.ActionLink("Pieslēgties", "Login", "User")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Made by Artūrs Hasanovs</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
